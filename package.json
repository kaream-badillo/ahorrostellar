{
  "name": "ahorrostellar",
  "version": "1.0.0",
  "description": "Educational DeFi app for LATAM students built with Stellar + Soroban + Reflector Oracle",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "node scripts/dev-frontend.js",
    "build": "node scripts/build-frontend.js",
    "setup": "node scripts/setup.js",
    "deploy": "node scripts/deploy.js",
    "start": "cd frontend && npm start",
    "lint": "cd frontend && npm run lint",
    "test": "cd frontend && npm test",
    "test:unit": "cd frontend && npm run test:unit",
    "test:integration": "cd frontend && npm run test:integration",
    "test:e2e": "cd frontend && npm run test:e2e",
    "format": "cd frontend && npm run format",
    "type-check": "cd frontend && npm run type-check"
  },
  "keywords": [
    "stellar",
    "soroban",
    "defi",
    "reflector",
    "oracle",
    "education",
    "latam",
    "blockchain"
  ],
  "author": "Kaream Badillo <kaream.badillo@usach.cl>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kaream-badillo/ahorrostellar.git"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}